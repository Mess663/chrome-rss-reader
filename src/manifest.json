{
	"manifest_version": 2,
	"name": "demo",
	"version": "1.0.0",
	"description": "__MSG_pluginDesc__",
	"icons":
	{
		"16": "./img/icon.png",
		"48": "./img/icon.png",
		"128": "./img/icon.png"
	},
	"background":
	{
		"page": "index.html"
  },
  "browser_action": 
	{
		"default_icon": "./img/icon.png",
		"default_title": "这是一个示例Chrome插件",
		"default_popup": "./popup.html"
	},
	"permissions":
	[
		"contextMenus",
		"tabs", 
		"notifications",
		"webRequest", 
		"webRequestBlocking", 
		"storage",
		"http://*/*", 
		"https://*/*" 
	]
}